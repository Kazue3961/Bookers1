<% if flash[:success] %>
  <p class="success_msg"><%= flash[:success] %></p>
<% end %>

<!-- 投稿一覧 -->

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <!-- show, edit, destroy, link -->
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<!-- 新規投稿 -->

<h2>New book</h2>
  <div class="form">
  <%= form_for(@book) do |f| %>

<!-- エラーメッセージ -->
  <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
    <li class="error_info"><%= message %></li>
    <% end %>
  <% end %>

  <div class="form_field">
    <label>Title</label>
    <%= f.text_field :title, class:"book_title" %>
  </div>

  <div class="form_field">
    <label>Body</label>
    <%= f.text_area :body, class:"book_body" %>
  </div>


<div class="link_button">
    <%= f.submit 'Create Book' %>
  </div>

</div>

<% end %>