<h1>Editing Book</h1>

  <%= form_for(@book) do |f| %>

  <!-- エラーメッセージ -->
    <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
      <li class="error_info"><%= message %></li>
    <% end %>

  <% end %>

   <div class="form_field">
     <label>Title</label>
     <%= f.text_field :title, class:"book_title" %>
   </div>

   <div class="form_field">
     <label>Body</label>
     <%= f.text_area :body, class:"book_body" %>
   </div>

   <div class="link_button">
     <%= f.submit 'Update Book' %>
   </div>

<!-- show link -->
     <%= link_to "Show", book_path, class:"show" %>
     |
<!-- back link -->
     <%= link_to "Back", books_path, class:"back" %>

<% end %>
